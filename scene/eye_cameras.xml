<mujoco>
  <!-- Camera positions for eye visualization -->
  <worldbody>
    <!-- Camera rig positioned relative to eye -->
    <body name="camera_rig" pos="0 0 0.1">
      <!-- Top view: looking down at the eye from above -->
      <camera name="top_view" pos="0.03 -0.1 0.175" euler="90 0 0" fovy="30"/>

      <!-- Angle view: perspective view from the side -->
      <camera name="angle_view" pos="0.2 -0.1 0.175" euler="90 70 0" fovy="40"/>
    </body>
  </worldbody>
</mujoco>
